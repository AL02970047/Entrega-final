// Clase que representa al administrador
class Administrador {
    private static final String USUARIO = "admin"; // Nombre de usuario por defecto
    private static final String CONTRASENA = "1234"; // Contraseña por defecto

    // Método para verificar las credenciales del administrador
    public boolean verificarCredenciales(Scanner scanner) {
        System.out.println("Ingrese su usuario: ");
        String usuario = scanner.nextLine();
        System.out.println("Ingrese su contraseña: ");
        String contrasena = scanner.nextLine();

        return USUARIO.equals(usuario) && CONTRASENA.equals(contrasena); // Compara las credenciales
    }
}
