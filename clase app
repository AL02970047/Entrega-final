// Clase principal que ejecuta la aplicación
public class App {
    public static void main(String[] args) {
        // Verifica la existencia de los archivos necesarios
        ValidacionArchivos.verificarArchivos();
        Scanner scanner = new Scanner(System.in);
        Administrador admin = new Administrador();

        // Verifica las credenciales del administrador
        if (admin.verificarCredenciales(scanner)) {
            boolean salir = false;
            // Menú principal de la aplicación
            while (!salir) {
                System.out.println("\n--- Sistema de administración de citas ---");
                System.out.println("1. Alta de Doctor");
                System.out.println("2. Alta de Paciente");
                System.out.println("3. Crear Cita");
                System.out.println("4. Consultar Citas");
                System.out.println("5. Salir");
                System.out.print("Seleccione una opción: ");

                int opcion = scanner.nextInt();
                scanner.nextLine(); // Limpieza del buffer

                // Ejecuta la opción seleccionada
                switch (opcion) {
                    case 1:
                        Doctor.altaDoctor(scanner); // Alta de doctor
                        break;
                    case 2:
                        Paciente.altaPaciente(scanner); // Alta de paciente
                        break;
                    case 3:
                        Cita.crearCita(scanner); // Crear cita
                        break;
                    case 4:
                        Cita.consultarCitas(); // Consultar citas
                        break;
                    case 5:
                        salir = true; // Salir del menú
                        break;
                    default:
                        System.out.println("Opción inválida. Intente de nuevo.");
                }
            }
        } else {
            System.out.println("Acceso denegado. Credenciales incorrectas.");
        }
        scanner.close(); // Cierra el escáner
    }
}
